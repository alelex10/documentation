<div class="contenedor">
	<h2>Propiedad Outline</h2>
	<p>Este es un ejemplo que muestra diferentes usos de la propiedad outline en CSS.</p>
	<button onclick="aplicarOutline()">Aplicar outline</button>
</div>

<script>
    const $button = document.querySelector("button");
    $button?.addEventListener("click", () => {
        aplicarOutline();
    })
	function aplicarOutline() {
		const elemento = document.querySelector(".contenedor");
		elemento?.classList.toggle("outline");
		elemento?.classList.toggle("offset");
	}
</script>

<style>
    button {
        margin: 20px;
        padding: 10px;
        background-color: #000000;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
	.contenedor {
		width: 300px;
		border: 1px solid #000;
		padding: 20px;
		margin: 20px;
		outline: 2px dashed #ff0000;
	}

	.outline {
		outline: 3px solid #00ff00;
		outline-style: dotted;
	}

	.offset {
		outline-offset: 10px;
	}

	.contenedor:hover {
		outline-color: #0000ff;
		transition: outline-offset 0.5s;
	}

	@keyframes animacionOutline {
		from {
			outline: 2px solid #ff0000;
		}
		to {
			outline: 2px solid #00ff00;
		}
	}

	.animado {
		animation: animacionOutline 2s infinite;
	}

	@media (max-width: 600px) {
		.contenedor {
			outline: 2px solid #ff00ff;
		}
	}
</style>
